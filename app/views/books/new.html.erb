<h3><%= @title %></h3>
<hr>
<%= form_for(@book) do |f| %>
	<div class="form-group">
		<%= f.label :Title %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :Page %>
		<%= f.number_field :page, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :Description %>
		<%= f.text_area :description, class: 'form-control', rows: '4' %>
	</div>

	<div class="form-group">
		<%= f.submit nil, class: "btn btn-info" %>
	</div>
<% end %>